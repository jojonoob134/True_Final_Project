@model CostVal

<h3>@Model.PurchesName Information</h3>

<table class="table">
    <tr>
        <th style="color: lightgreen;">purchesID</th>
        <th style="color: lightgreen;">month</th>
        <th style="color: lightgreen;">purchesName</th>
        <th style="color: darkred;">cost</th>
    </tr>
    <tr>
        <td style="color: lightgreen;">@Model.PurchesID</td>
        <td style="color: lightgreen;">@Model.Month</td>
        <td style="color: lightgreen;">@Model.PurchesName</td>
        <td style="color: darkred;">@Model.Cost</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Tracker/UpdateCost/@Model.PurchesID" style="color: lightgreen;">Update calculator</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteCost", "Tracker", "Post"))
    {
        <input type="hidden" asp-for="PurchesID" value="@Model.PurchesID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>


<div style="display: block">

    @using (Html.BeginForm("DeleteAllMonthCost", "Tracker", "Post"))
    {
        <input type="hidden" asp-for="Month" value="@Model.Month" />
        <input type="submit" onclick="return confirm('Are you sure, this will delete all with the same month as this one?')" value="Delete all with the same month" />
    }
</div>