@model CostVal

<h2>Create a New Cost</h2>

@using (Html.BeginForm("InsertCostToDatabase", "Tracker", "Post"))
{
    <input asp-for="PurchesID" type="hidden" value="" />

    <label asp-for="PurchesName" class="control-label">Purches Name</label>
    <input type="text" name="PurchesName" class="form-control" value="" />

    <label asp-for="Cost" class="control-label">Cost</label>
    <input type="number" step="0.01" name="Cost" class="form-control" />


    <div class="form-group">
        <label for="">Select a Month</label>
        <select class="form-control" name="Month" value="">
            @foreach (var mon in Model.Months)
            {
                <option value="@mon.Month">@mon.MonthID @mon.Month</option>
            }
        </select>
    </div>



    <input type="submit" value="Creat Cost" class="btn btn-primary" />
}