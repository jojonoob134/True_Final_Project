@model CostVal

<h2>Update @Model.PurchesName</h2>

@using (Html.BeginForm("UpdateCostValToDatabase", "Tracker", "Post"))
{
    <input asp-for="PurchesID" type="hidden" value="@Model.PurchesID" />

    <label asp-for="PurchesName" class="control-label">Name</label>
    <input type="text" name="PurchesName" class="form-control" value="@Model.PurchesName" />

    <label asp-for="Cost" class="control-label">Cost</label>
    <input type="number" step="0.01" name="Cost" class="form-control" value="@Model.Cost" />

    <div class="form-group">
        <label for="">Select a Month</label>
        <select class="form-control" name="Month" value="">

            @if(Model.Months != null)
            {
                @foreach (Months mon in Model.Months)
                {
                    <option value="@mon.Month">@mon.MonthID @mon.Month</option>
                }
            }
           
        </select>
    </div>

    <input type="submit" value="Update calculator" class="btn btn-primary" />
}