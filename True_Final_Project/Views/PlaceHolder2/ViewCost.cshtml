@model CostVal

<h3>@Model.PurchesName Information</h3>

<table class="table">
    <tr>
        <th>purchesID</th>
        <th>month</th>
        <th>purchesName</th>
        <th>cost</th>
    </tr>
    <tr>
        <td>@Model.PurchesID</td>
        <td>@Model.Month</td>
        <td>@Model.PurchesName</td>
        <td>@Model.Cost</td>
    </tr>
</table>

<div style="display: block">
    <a href="/PlaceHolder2/UpdateCost/@Model.PurchesID">Update this Product</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteCost", "PlaceHolder2", "Post"))
    {
        <input type="hidden" asp-for="PurchesID" value="@Model.PurchesID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>